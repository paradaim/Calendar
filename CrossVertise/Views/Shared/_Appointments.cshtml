@model List<TblTask>;
@if (Model.Count() > 0)
{
    <div class="row border border-1 rounded p-2">
        @foreach (var item in Model)
        {
            <h6>@item.Date - <a class="AppointmentsDetails"
            data-url='@Url.Action("_AppointmentsDetails","Home", new { TaskID = item.TaskId } )'>@item.Subject</a></h6>
        }
    </div>
}
else
{
    <div class="row border border-1 rounded p-2">
        <h6>No task inserted!</h6>
    </div>
}
